{
  "name": "miu-player-tauri",
  "version": "1.0.0",
  "description": "MIU Music Player - Cross-platform desktop client built with Tauri",
  "main": "index.js",
  "scripts": {
    "dev": "cargo tauri dev",
    "build": "cargo tauri build",
    "build:linux": "cargo tauri build --target x86_64-unknown-linux-gnu",
    "build:windows": "cargo tauri build --target x86_64-pc-windows-gnu",
    "build:macos": "cargo tauri build --target x86_64-apple-darwin",
    "build-frontend": "cp -r frontend/* dist/",
    "prepare-dist": "mkdir -p dist && npm run build-frontend"
  },
  "keywords": ["music", "player", "tauri", "cross-platform"],
  "author": "MIU Team",
  "license": "MIT",
  "devDependencies": {
    "@tauri-apps/cli": "^1.5.0"
  }
}