#!/bin/bash
# MIU GTK Player Launcher
# Uses system Python to ensure GTK bindings are available

# Use system Python instead of pyenv/virtualenv Python
SYSTEM_PYTHON="/usr/bin/python3"

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Run the GTK player with system Python
exec "$SYSTEM_PYTHON" "$SCRIPT_DIR/miu_gtk_player.py" "$@"