# Environment-specific URLs
# Development environment (used for both local development and miu.seilent.net)
# For local development, use:
# DEV_URL=http://localhost:3300
# DEV_API_URL=http://localhost:3000
# For remote development, use:
DEV_URL=https://miu.seilent.net
DEV_API_URL=http://localhost:3000
DEV_DISCORD_REDIRECT_URI=${DEV_URL}/auth/callback

# Production environment (miu.gacha.boo)
PROD_URL=https://miu.gacha.boo
PROD_API_URL=http://localhost:3000
PROD_DISCORD_REDIRECT_URI=${PROD_URL}/api/auth/discord/callback

# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development
API_URL=${DEV_API_URL}
FRONTEND_URL=${DEV_URL}
NEXT_PUBLIC_API_URL=${DEV_API_URL}
NEXT_PUBLIC_URL=${DEV_URL}
NEXT_PUBLIC_DISCORD_REDIRECT_URI=${DEV_DISCORD_REDIRECT_URI}
CORS_ORIGIN=${DEV_URL}

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=miu
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

# Discord Configuration
DISCORD_TOKEN=your_discord_token
DISCORD_CLIENT_ID=your_client_id
DISCORD_CLIENT_SECRET=your_client_secret
NEXT_PUBLIC_DISCORD_CLIENT_ID=${DISCORD_CLIENT_ID}
DISCORD_DEFAULT_VOICE_CHANNEL_ID=your_voice_channel_id
DISCORD_DEFAULT_GUILD_ID=your_guild_id

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRY=7d

# YouTube Configuration
YOUTUBE_API_KEYS=key1,key2,key3
# Legacy single key support (optional if using YOUTUBE_API_KEYS)
YOUTUBE_API_KEY=your_youtube_api_key

# Cache Configuration
CACHE_DIR=./cache
CACHE_EXPIRY=86400
CACHE_TTL=3600
TRACK_CACHE_SIZE=1000
HISTORY_SIZE=100

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW=1000
RATE_LIMIT_MAX_REQUESTS=10
SEARCH_LIMIT_WINDOW=60000
SEARCH_LIMIT_MAX=10

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_FORMAT=dev

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_DEFAULT_THEME=dark
NEXT_PUBLIC_ENABLE_THEME_SWITCHER=true
ENABLE_ANALYTICS=false
ENABLE_RATE_LIMITING=true
ENABLE_SWAGGER=true

# Queue Settings
MAX_QUEUE_SIZE=10
MAX_SONGS_PER_USER=2
MAX_QUEUE_PER_USER=3
QUEUE_TIMEOUT=60

# Autoplay Settings
AUTOPLAY_ENABLED=true
PLAYLIST_ROTATION_ENABLED=true
MAX_AUTOPLAY_SONGS=5

# Admin Configuration
ADMIN_USER_ID=your_admin_user_id

# Lavalink Configuration
LAVALINK_HOST=lavalink
LAVALINK_PORT=2333
LAVALINK_PASSWORD=youshallnotpass

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin 