# Base URLs
URL=WEBSITE_URL

# Admin Configuration
ADMIN_USER_ID="<YOUR_ADMIN_USER_ID>"

# YouTube Configuration
YOUTUBE_API_KEYS="<YOUR_YOUTUBE_API_KEY_1>,<YOUR_YOUTUBE_API_KEY_2>,<YOUR_YOUTUBE_API_KEY_3>"

# Discord Configuration
DISCORD_TOKEN="<YOUR_DISCORD_BOT_TOKEN>"
DISCORD_CLIENT_ID="<YOUR_DISCORD_CLIENT_ID>"
DISCORD_CLIENT_SECRET="<YOUR_DISCORD_CLIENT_SECRET>"
DISCORD_DEFAULT_VOICE_CHANNEL_ID="<YOUR_DEFAULT_VOICE_CHANNEL_ID>"
DISCORD_DEFAULT_GUILD_ID="<YOUR_DEFAULT_GUILD_ID>"

# JWT Configuration
JWT_SECRET="<YOUR_JWT_SECRET_KEY>"
JWT_EXPIRY=365d

# Frontend Configuration
NEXT_PUBLIC_URL=${URL}
NEXT_PUBLIC_API_URL=${URL}/backend
NEXT_PUBLIC_DISCORD_CLIENT_ID=${DISCORD_CLIENT_ID}
NEXT_PUBLIC_DISCORD_REDIRECT_URI=${URL}/auth/callback
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_DEFAULT_THEME=dark
NEXT_PUBLIC_ENABLE_THEME_SWITCHER=true

# Backend Configuration
PORT=3000
HOST=localhost
NODE_ENV=production
API_URL=${URL}/backend
FRONTEND_URL=${URL}
CORS_ORIGIN=${URL}

# Database Configuration
POSTGRES_USER=miu
POSTGRES_PASSWORD=miu
POSTGRES_DB=miu
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

# Cache Configuration
CACHE_DIR=./cache
CACHE_EXPIRY=86400
CACHE_TTL=3600
TRACK_CACHE_SIZE=1000
HISTORY_SIZE=100     

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW=1000
RATE_LIMIT_MAX_REQUESTS=10
SEARCH_LIMIT_WINDOW=60000
SEARCH_LIMIT_MAX=10

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_FORMAT=dev

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_RATE_LIMITING=true
ENABLE_SWAGGER=true

# Queue Settings
MAX_QUEUE_SIZE=20
MAX_SONGS_PER_USER=3
MAX_QUEUE_PER_USER=3
QUEUE_TIMEOUT=60

# Autoplay Settings
AUTOPLAY_ENABLED=true
PLAYLIST_ROTATION_ENABLED=true
MAX_AUTOPLAY_SONGS=5
AUTOPLAY_QUEUE_SIZE=5
AUTOPLAY_BUFFER_SIZE=5
PLAYLIST_EXHAUSTED_THRESHOLD=0.8
AUTOPLAY_WEIGHT_PLAYLIST=0.05
AUTOPLAY_WEIGHT_HISTORY=0.05
AUTOPLAY_WEIGHT_POPULAR=0.05
AUTOPLAY_WEIGHT_YOUTUBE=0.80
AUTOPLAY_WEIGHT_RANDOM=0.05

# Timeout Settings
USER_LEAVE_TIMEOUT=10000

# Cooldown Settings (in hours)
SEED_TRACK_COOLDOWN=48
PLAYED_TRACKS_EXPIRY=1
AUTOPLAY_TRACKS_EXPIRY=18
TOP_TIER_EXPIRY=18
MID_TIER_EXPIRY=10
LOW_TIER_EXPIRY=8
CHANNEL_COOLDOWN=2
MAX_DURATION=360
MIN_DURATION=125

# YouTube Recommendation Settings
YT_REC_POOL_SIZE=2000
YT_REC_FETCH_COUNT=3
YT_REC_JAPANESE_WEIGHT=0.7
YT_REC_MIN_RELEVANCE_SCORE=0.7

# Retry Settings
MAX_RETRIES=3
RETRY_DELAY=1000
