# Base URLs
URL=https://example.com
API_URL=https://example.com/backend

# Frontend Configuration
NEXT_PUBLIC_URL=${URL}
NEXT_PUBLIC_API_URL=${API_URL}
NEXT_PUBLIC_DISCORD_CLIENT_ID=${DISCORD_CLIENT_ID}
NEXT_PUBLIC_DISCORD_REDIRECT_URI=${URL}/auth/callback
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_DEFAULT_THEME=dark
NEXT_PUBLIC_ENABLE_THEME_SWITCHER=true

# Backend Configuration
PORT=3000
HOST=localhost
NODE_ENV=production
FRONTEND_URL=${URL}
CORS_ORIGIN=${URL}

# Development overrides (uncomment for local development)
# URL=http://localhost:3300
# API_URL=http://localhost:3000
# NODE_ENV=development

# Database Configuration
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=your_db_name
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

# Discord Configuration
DISCORD_TOKEN=your_discord_token
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_DEFAULT_VOICE_CHANNEL_ID=your_voice_channel_id
DISCORD_DEFAULT_GUILD_ID=your_guild_id

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRY=7d

# YouTube Configuration
YOUTUBE_API_KEYS=key1,key2,key3,key4,key5

# Cache Configuration
CACHE_DIR=./cache
CACHE_EXPIRY=86400
CACHE_TTL=3600
TRACK_CACHE_SIZE=1000
HISTORY_SIZE=100

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW=1000
RATE_LIMIT_MAX_REQUESTS=10
SEARCH_LIMIT_WINDOW=60000
SEARCH_LIMIT_MAX=10

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_FORMAT=dev

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_RATE_LIMITING=true
ENABLE_SWAGGER=true

# Queue Settings
MAX_QUEUE_SIZE=10
MAX_SONGS_PER_USER=3
MAX_QUEUE_PER_USER=3
QUEUE_TIMEOUT=60

# Autoplay Settings
AUTOPLAY_ENABLED=true
PLAYLIST_ROTATION_ENABLED=true
MAX_AUTOPLAY_SONGS=5

# Admin Configuration
ADMIN_USER_ID=your_admin_user_id

# Lavalink Configuration
LAVALINK_HOST=lavalink
LAVALINK_PORT=2333
LAVALINK_PASSWORD=youshallnotpass

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin 